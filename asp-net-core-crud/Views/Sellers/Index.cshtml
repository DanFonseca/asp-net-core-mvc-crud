@model IEnumerable<asp_net_core_crud.Models.Seller>
@{
    ViewData["Title"] = "Seller";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
      
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.BirthDate</td>
            <td>@item.BaseSalary</td>

            <td><a asp-action="Edit" aps-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
            <td><a asp-action="Details" aps-route-id="@item.Id" class="btn btn-primary">Details</a></td>
            <td><a asp-action="Delete" aps-route-id="@item.Id" class="btn btn-primary">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
